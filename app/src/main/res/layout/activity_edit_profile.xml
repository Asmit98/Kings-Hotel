<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.fragments.EditProfile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_Color">

        <ImageView
            android:id="@+id/editProfileBackIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:elevation="20dp"
            android:src="@drawable/ic_round_arrow_back_ios_new_24"
            app:tint="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIV"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cod"
            app:civ_border_color="@color/primary_Color"
            app:civ_circle_background_color="@color/primary_Color"/>
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="150dp"-->
        <!--            android:layout_marginLeft="80dp"-->
        <!--            android:layout_marginTop="30dp"-->
        <!--            android:layout_marginRight="80dp"-->
        <!--            android:padding="5dp"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:src="@drawable/ic_google"-->
        <!--            app:civ_border_color="@color/primary" />-->



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_Color" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/profuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asmit Poudel"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/profemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asmitpoudel98@gmail.com"
            android:layout_marginLeft="55dp"
            android:textSize="16dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Phone No:"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/profphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9817186566"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Change Password:"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/profchangepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sddffg"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>




    <LinearLayout
        android:id="@+id/savechangesLL"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editTV"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-20dp"
            android:background="@color/grey_divider"
            android:gravity="center"
            android:paddingStart="50dp"
            android:text="save Changes"
            android:textColor="@color/primary_Color"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>